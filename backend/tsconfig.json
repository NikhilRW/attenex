{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@models/*": ["./src/models/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js", "../src/shared/utils/logger.ts"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
